<Alloy>
	<Window id="window">
        <View class="vLayout">
            <Widget src="customNavBar" id="navBar" class="navBar" onLeftButtonClick="navigateUp"></Widget>
            <View>
                <Widget src="customIndicatorInsideView" id="progressIndicator"></Widget>
                <ListView id="listView" onItemclick="onItemclick" onMarker="onMarkerReached">
                    <Templates>
                        <ItemTemplate name="pubTemplate">
                            <View class="hSize itemContainer">
                                <View class="hSize itemContent">
                                    <Label class="title lightFont" bindId="title"></Label>
                                    <ImageView class="icon"></ImageView>
                                </View>
                            </View>
                        </ItemTemplate>
                    </Templates>
                    <ListSection id="pubSection"></ListSection>
                    <FooterView>
                        <View id="footer">
                            <Widget src="customIndicatorInsideView"></Widget>
                        </View>
                    </FooterView>
                </ListView>
            </View>
        </View>
    </Window>
</Alloy>
